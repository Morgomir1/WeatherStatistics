<html xmlns:th="http://www.thymeleaf.org">
<head>
    <title>Главная</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="styles/css/{{#theme}}{{name}}{{/theme}}.css" >
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body class="root">
<div>
    <div class="buttonsBox col-xl">
        <div class="row">
            <a class="buttonBox col-md" href="/mainRedirect"><h2 class="buttonTitle">Главная</h2></a>
            <a class="buttonBox col-md" href="/informationRedirect"><h2 class="buttonTitle">Информация</h2></a>
            <a class="buttonBox col-md" href="/dayFindRedirect"><h2 class="buttonTitle">Поиск дня</h2></a>
            <a class="buttonBox col-md" href="/planningRedirect"><h2 class="buttonTitle">Планировка</h2></a>
            <a class="buttonBox col-md" href="/settingsRedirect"><h2 class="buttonTitle">Настройки</h2></a>
            <a class="buttonBox col-md" href="/adminRedirect"><h2 class="buttonTitle">Админ</h2></a>
        </div>
    </div>
    <div class="mainBox">
        <div class="row">
            <div class="box2 col-md-2">
                <h2 class="buttonTitle" >{{day}} {{month}}</h2>
            </div>
            <div class="col-xl"></div>
        </div>
        <div class="row weatherMainBox">
            {{#isDay}}
                {{#weatherStats}}
                    <div class="weatherBox col-md">
                        <div class="medium_title">
                            <h2>{{hour}}:00 - {{nextHour}}:00</h2><br/>
                            Средняя температура:<br>
                            {{#positive}}
                                +{{T}}<br/>
                            {{/positive}}
                            {{^positive}}
                                {{T}}<br/>
                            {{/positive}}
                            Вероятность осадков:<br>
                            {{#weatherTypes}}
                                {{#entrySet}}
                                    {{key}} - {{value}}%<br>
                                {{/entrySet}}
                            {{/weatherTypes}}
                        </div>
                    </div>
                {{/weatherStats}}
            {{/isDay}}
            {{#isMonth}}
                <div class="row">
                    {{#weatherStats1}}
                        <div class="weatherBox col-md">
                            {{day}} {{month}}<br>
                            {{#positive}}
                                +{{T}}<br/>
                            {{/positive}}
                            {{^positive}}
                                {{T}}<br/>
                            {{/positive}}
                        </div>
                    {{/weatherStats1}}
                </div>
                <div class="row">
                    {{#weatherStats2}}
                        <div class="weatherBox col-md">
                            {{day}} {{month}}<br>
                            {{#positive}}
                                +{{T}}<br/>
                            {{/positive}}
                            {{^positive}}
                                {{T}}<br/>
                            {{/positive}}
                        </div>
                    {{/weatherStats2}}
                </div>
                <div class="row">
                    {{#weatherStats3}}
                        <div class="weatherBox col-md">
                            {{day}} {{month}}<br>
                            {{#positive}}
                                +{{T}}<br/>
                            {{/positive}}
                            {{^positive}}
                                {{T}}<br/>
                            {{/positive}}
                        </div>
                    {{/weatherStats3}}
                </div>
                <div class="row">
                    {{#weatherStats4}}
                        <div class="weatherBox col-md">
                            {{day}} {{month}}<br>
                            {{#positive}}
                                +{{T}}<br/>
                            {{/positive}}
                            {{^positive}}
                                {{T}}<br/>
                            {{/positive}}
                        </div>
                    {{/weatherStats4}}
                </div>
            {{/isMonth}}
            {{#isWeek}}
                {{#weatherStats}}
                    <div class="weatherBox col-md">
                        <div class="medium_title">
                            <p><div class="buttonTitle">{{day}} {{month}}</div></p>
                            <p><div class="buttonTitle">{{dayOfWeekStr}}</div></p>
                            Средняя температура:<br>
                            {{#positive}}
                                +{{T}}<br/>
                            {{/positive}}
                            {{^positive}}
                                {{T}}<br/>
                            {{/positive}}
                            Вероятность осадков:<br>
                            {{#weatherTypes}}
                                {{#entrySet}}
                                    {{key}} - {{value}}%<br>
                                {{/entrySet}}
                            {{/weatherTypes}}
                        </div>
                    </div>
                {{/weatherStats}}
            {{/isWeek}}
        </div>
        <div class="row">
            <div class="buttonDaySwitchBox col-xl">
                <form method="post" action="/prevDay">
                    <button type="submit" name="day" value="{{day}} {{monthNumber}}" class="buttonDaySwitchBox2">
                        <h2 class="buttonTitle">Предыдущ{{^isWeek}}ий{{/isWeek}}{{#isWeek}}ая{{/isWeek}} {{#isDay}}день{{/isDay}}{{#isWeek}}неделя{{/isWeek}}{{#isMonth}}месяц{{/isMonth}}</h2>
                    </button>
                </form>

            </div>
            <div class="col-xl-1"></div>
            <div class="col-md">
                <form method="post" action="/downloadTable">
                    <button class="buttonDownload" name="statsForDownload" value="{{statsForDownload}}" type="submit">Скачать таблицу</button>
                </form>
            </div>
            <div class="col-xl-1"></div>
            <div class="buttonDaySwitchBox col-xl">
                <form method="post" action="/nextDay">
                    <button type="submit" name="day"  value="{{day}} {{monthNumber}}" class="buttonDaySwitchBox2">
                        <h2 class="buttonTitle">Следующ{{^isWeek}}ий{{/isWeek}}{{#isWeek}}ая{{/isWeek}} {{#isDay}}день{{/isDay}}{{#isWeek}}неделя{{/isWeek}}{{#isMonth}}месяц{{/isMonth}}</h2>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
</body>
</html>