<html xmlns:th="http://www.thymeleaf.org">
<head>
    <title>Настройки</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="styles/css/{{#theme}}{{name}}{{/theme}}.css" >
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body class="root">
<div class="buttonsBox col-xl">
    <div class="row">
        <a class="buttonBox col-md" href="/mainRedirect"><h2 class="buttonTitle">Главная</h2></a>
        <a class="buttonBox col-md" href="/informationRedirect"><h2 class="buttonTitle">Информация</h2></a>
        <a class="buttonBox col-md" href="/dayFindRedirect"><h2 class="buttonTitle">Поиск дня</h2></a>
        <a class="buttonBox col-md" href="/planningRedirect"><h2 class="buttonTitle">Планировка</h2></a>
        <a class="buttonBox col-md" href="/settingsRedirect"><h2 class="buttonTitle">Настройки</h2></a>
        <a class="buttonBox col-md" href="/adminRedirect"><h2 class="buttonTitle">Админ</h2></a>
    </div>
</div>
<div class="mainBox">
    <form action="/setupSettings" method="post">
        <div class="row">
            <div class="col-md text-frame2">
                <div class="settingsTitle">Вид отображения главной страницы</div>
                {{#displayTypes}}
                    <p><input class="input-settings" name="displayType" type="radio" value={{.}}>{{name}}</p>
                {{/displayTypes}}
            </div>
            <div class="col-md text-frame2">
                <div class="settingsTitle">Оформление сайта</div>
                {{#themeTypes}}
                    <p><input class="input-settings" name="theme" type="radio" value={{.}}>{{displayName}}</p>
                {{/themeTypes}}
            </div>
        </div>
        <div class="row">
            <button class="buttonSettings" type="submit">Применить изменения</button>
        </div>
    </form>
</div>
</body>
</html>