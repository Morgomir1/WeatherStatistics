<html xmlns:th="http://www.thymeleaf.org">
<head>
    <title>Поиск дня</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="styles/css/{{#theme}}{{name}}{{/theme}}.css" >
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body class="root">

    <div class="buttonsBox col-xl">
        <div class="row">
            <a class="buttonBox col-md" href="/mainRedirect"><h2 class="buttonTitle">Главная</h2></a>
            <a class="buttonBox col-md" href="/informationRedirect"><h2 class="buttonTitle">Информация</h2></a>
            <a class="buttonBox col-md" href="/dayFindRedirect"><h2 class="buttonTitle">Поиск дня</h2></a>
            <a class="buttonBox col-md" href="/planningRedirect"><h2 class="buttonTitle">Планировка</h2></a>
            <a class="buttonBox col-md" href="/settingsRedirect"><h2 class="buttonTitle">Настройки</h2></a>
            <a class="buttonBox col-md" href="/adminRedirect"><h2 class="buttonTitle">Админ</h2></a>
        </div>
    </div>

<div class="mainBox">
    <div class="row">
        <div class="findOptionsContainer col-3">
            <div class="findOptionsContainer2 col">
                <div class="row">
                    <span class="parametersText">Введите интересующие вас параметры:</span>
                </div>
                <br>
                <form action="/findDate" method="post">
                    <br>
                    <!--select name="cloudiness" size="3" multiple>
                        {{#cloudTypes}}
                            <option value="{{displayName}}">{{displayName}}</option>
                        {{/cloudTypes}}
                    </select-->
                    <select name="precipitation" size="3" multiple>
                        {{#weatherTypes}}
                            <option value="{{weatherDisplayName}}">{{weatherDisplayName}}</option>
                        {{/weatherTypes}}
                    </select>
                    <select name="timeInterval" size="3" multiple>
                        {{#timeIntervals}}
                            <option value={{time}}>{{time}}:00 - {{next}}:00</option>
                        {{/timeIntervals}}
                    </select>
                    <br>
                    <input class="input-temp" type="number" name="temperature" placeholder="Температура">
                    <br>
                    <button type="submit" class="buttonDayFind">Поиск</button>
                    <!--button class="buttonDaySwitchBox2" type="submit">Добавить</button-->
                </form>
            </div>
        </div>
        <div class="container col">
            <div class="resultsBox row">
                <span class="resultsText">Ближайшие дни с подходящей погодой:</span>
            </div>
            <div class="daysBox row">
                {{#results}}
                <div class="col">
                    <div class="day">
                        {{day}}.{{month}}<br>
                        {{hour}}:00 - {{nextHour}}:00<br/>
                        Средняя температура в течении дня: <br>
                        {{#positive}}
                            +{{T}}<br/>
                        {{/positive}}
                        {{^positive}}
                            {{T}}<br/>
                        {{/positive}}
                        Вероятность осадков:<br>
                        {{#weatherTypes}}
                            {{#entrySet}}
                                {{key}} - {{value}}%<br>
                            {{/entrySet}}
                        {{/weatherTypes}}
                    </div>
                </div>
                {{/results}}
            </div>
            <div class="row">
                <div class="col-sm"></div>
                <!--form>
                    <button type="submit" name="prevFindDays" class="buttonDayFind col-sm"><h2 class="buttonTitleDayFind">Назад</h2></button>
                </form-->
                <a href="/prevFindDays" class="buttonDaySwitchBox2 col-sm">
                    <h2 class="buttonTitle">Назад</h2>
                </a>
                <div class="col-md"></div>
                <!--form>
                    <button type="submit" name="nextFindDays" class="buttonDayFind col-sm"><h2 class="buttonTitleDayFind">Далее</h2></button>
                </form-->
                <a href="/nextFindDays" class="buttonDaySwitchBox2 col-sm">
                    <h2 class="buttonTitle">Вперед</h2>
                </a>
                <div class="col-sm"></div>
            </div>
        </div>

    </div>
</div>
</body>
</html>